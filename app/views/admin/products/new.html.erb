<h2> New Product </h2>



  <div class="container-fluid col-md-10 col-centered">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>
        <%= simple_form_for [:admin, @product] do |f| %>

        <div class="group">
          <%= f.input :title %>
        </div>

        <div class="group">
          <%= f.input :description %>
        </div>

        <div class="group">
          <%= f.input :price %>
        </div>

        <div class="group">
          <%= f.input :quantity %>
        </div>

        <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

        <% end %>

        </p>
      </div>
    </div>
</div>
